<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/css/Layout.css" rel="stylesheet" />
    <!--<link rel="stylesheet" href="~/css/Style.css" />-->
</head>
<body>
    <!--меню-->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div>
                <script src="~/js/searchOnKeyPress.js"></script>
                <ul class="nav navbar-nav">

                    <li><a href="~/Home/Index?loadAll=true" class="navbar-brand">Main Page</a></li>

                    <li><input type="search" form="filter" class="search" id="search" name="searchQuery" placeholder="Search for items..." onkeypress="~/js/searchOnKeyPress.js" /></li>
                    <li><button type="submit" form="filter" class="search-button">@*🔎*@Ok</button></li>
                </ul>
            </div>  

            <div>
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (ViewBag.Login == null)
                        {
                            <li><a href="~/Auth/Register" class="navbar-brand">Register</a></li>
                            <li><a href="~/Auth/Login" class="navbar-brand">Login</a></li>
                        }
                        else if (ViewBag.Login == "admin") //TODO: not safe!!!
                        {
                            <li><a href="~/Editor/EditProduct" class="navbar-brand" >Add product</a></li>
                        }
                        else
                        {
                            <li><p class="navbar-brand" id="Login">@ViewBag.Login </p></li>
                        }

                        if (ViewBag.cartNotEmpty)
                        {
                            <li><a href="~/Home/Cart" class="navbar-brand">Cart</a></li>
                        }

                    }
                </ul>   
            </div>

        </div>


    </nav>
    <!--основной контент-->
    <div @*class="container body-content" *@ style="height:100%; min-height: 70%;">
        @RenderBody()

        <footer style="position:fixed; left:0; bottom:0">
            <p>LeadWay LLC 2019</p>
        </footer>
    </div>
</body>
</html>

