<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <!--<link rel="stylesheet" href="~/css/Style.css" />-->
</head>
<body>
    <!--меню-->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div>
                <ul class="nav navbar-nav">
                    <li><a href="~/Home/Index" class="navbar-brand">Main Page</a></li>
                </ul>
            </div>

            <div>

                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (ViewBag.Login == null)
                        {
                                <li><a href="~/Auth/Register" class="navbar-brand">Register</a></li>
                                <li><a href="~/Auth/Login" class="navbar-brand">Login</a></li>
                        }
                        else
                        {
                                <li><p class="navbar-brand" id="Login">@ViewBag.Login </p></li>
                        }
                    }
                </ul>
            </div>
            
            <div>
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (ViewBag.cartNotEmpty)
                        {
                            <li><a href="~/Home/Cart" class="navbar-brand">Cart</a></li>
                        }
                    }
                </ul>
            </div>

        </div>


    </nav>
    <!--основной контент-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>LeadWay LLC 2019</p>
        </footer>
    </div>
</body>
</html>

