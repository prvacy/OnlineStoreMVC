@model ICollection<MVCTest.Models.Product.Category>

@{
    ViewData["Title"] = "Product";
    Layout = "_Layout";

}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style>
        body {
            color: ghostwhite;
        }

        input, textarea, select {
            color: black;
        }
    </style>
</head>
<body>
    <form method="post" enctype="multipart/form-data">
        <table class="table-condensed">
            <tr>
                <td>Name:</td>
                <td><input type="text" name="Name" /> </td>
            </tr>

            <tr>
                <td>Price:</td>
                <td><input type="text" name="Price_string" step="0.05" /></td>
            </tr>

            <tr>
                <td>Quantity:</td>
                <td><input type="number" name="Quantity" /></td>
            </tr>

            <tr>
                <td>Description:</td>
                <td><textarea name="Description"></textarea> </td>
            </tr>

            <tr>
                <td>ImagePath:</td>
                <td><input type="text" name="ImagePath" /></td>
            </tr>


            <tr>
                <td>Category:</td>
                <td>
                    <select name="subCategoryId">
                        @foreach (var item in Model)
                        {
                            <optgroup label="@item.Name">

                                @foreach (var subc in item.SubCategories)
                                {
                                    <option value="@subc.Id">@subc.Name</option>
                                }

                            </optgroup>
                        }
                    </select>
                </td>
            </tr>

            <tr>
                <td>Image:</td>
                <td><input type="file" @*accept="image/png, image/jpeg" *@ name="file" /></td>
            </tr>

            <tr>
                <td><input type="submit" value="Submit" /> </td>
            </tr>

        </table>
    </form>
</body>
</html>

